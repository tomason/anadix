package org.anadix.section508

import org.anadix.html.*
import org.anadix.section508.report.*

rule "missing noscript tag"
	salience -10
	when
		exists (
			ScriptTag( )
		)
		not (
			NoscriptTag( textContent != null )
		)
	then
		insertLogical(new DocumentMissingNoscript());
end

rule "anchor uses javascript"
	when
		$element : ATag( href matches "javascript:.*" )
	then
		insert(new HrefContainsJavascript($element));
end

rule "area uses javascript"
	when
		$element : AreaTag( href matches "javascript:.*" )
	then
		insert(new HrefContainsJavascript($element));
end
