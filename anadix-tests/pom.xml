    </dependency>
    <dependency>
      <groupId>org</groupId>
      <artifactId>anadix-section508</artifactId>
      <version>${project.version}</version>
      <classifier>cobertura</classifier>
    </dependency>
    <dependency>
      <groupId>org</groupId>
      <artifactId>anadix-ant</artifactId>
      <version>${project.version}</version>
