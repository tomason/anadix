      <groupId>org</groupId>
      <artifactId>anadix-core</artifactId>
      <version>${project.version}</version>
      <classifier>sources</classifier>
    </dependency>
    
    <dependency>
      <groupId>org</groupId>
      <artifactId>anadix-html</artifactId>
      <version>${project.version}</version>
      <classifier>cobertura</classifier>
    </dependency>
    <dependency>
      <groupId>org</groupId>
      <artifactId>anadix-swingparser</artifactId>
      <version>${project.version}</version>
